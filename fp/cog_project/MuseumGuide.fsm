      dispatch =D(re.compile('#forward '))=> self.CmdForward() =CNext=> dispatch
      dispatch =D(re.compile('#sideways '))=> self.CmdSideways() =CNext=> dispatch
      dispatch =D(re.compile('#turn '))=> self.CmdTurn() =CNext=> dispatch
